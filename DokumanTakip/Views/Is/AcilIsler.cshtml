@model IEnumerable<DokumanTakip.Model.Is>

@{
    ViewBag.Title = "AcilIsler";
}

<h2></h2>

@*<p>
    @Html.ActionLink("Create New", "Create")
</p>*@
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>İş</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">İş Türleri</a></li>
                        <li class="breadcrumb-item active">Acil İşler</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Acil İşler</h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <table id="example2" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>
                                        İş Adı
                                    </th>
                                    <th>
                                        Bildirim Tarihi
                                    </th>
                                    <th>
                                        Çözüm Tarihi
                                    </th>
                                    <th>
                                        İş Sahibi
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.IsAdi)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.BildirimTarih)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.CozumTarihi)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.IsSahibi)
                                        </td>
                                        <td align="center">
                                            @Html.ActionLink("E", "/IsDuzenle", new { id = item.Id },new { @class= "btn btn-success far fa-edit" }) |

                                            @Html.ActionLink("D", "/IsSil", new { id = item.Id },new { @class= "btn btn-danger far fa-trash-alt" })
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>